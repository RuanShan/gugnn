<div class="panel panel-default" style="width:100%;" >
  <div class="panel-heading">
    <h2 class="panel-title">创建租赁信息</h2>
  </div>
  <div class="panel-body">
    <% if @product.category %>
      <%= simple_form_for @product, url: my_products_path, :html => {:multipart => true} do |f| %>

        <div class="form-inputs">
          <%#=render partial: "my/products/forms/#{@product.category}_form"%>
          <%=render partial: "my/products/forms/share_form", locals: {product_form: f}%>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "发布", style:"width:100%"%>
        </div>

      <% end %>
    <% else %>
      <%=render partial: "category"%>
    <% end %>
  </div>
</div>
