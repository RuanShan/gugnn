<% if @collections.present? %>
  <%@collections.each{|collection|%>
    <%product = collection.product%>
    <div class="my-item" style="margin:15px 0;">
      <table class="item" style="width:100%;height:auto;">
        <tbody>
          <tr class="item-content disp">
            <td class="item-content-img-td">
              <%=link_to product_path(product), target:"_blank" do %>
                <%= image_tag(product.cover_url, alt: product.title, class:"pull-left", style:"width:110px;height:110px;") %>
              <% end %>
            </td>
            <td style="padding: 5px;">
              <div class="item-content-titles">
                <p class="item-content-left-title">
                  <%=link_to product.title, product_path(product), target:"_blank" %>
                </p>
                <p class="item-content-left-date"><%= collection.created_at.to_s(:db) %></p>
              </div>
            </td>
            <td style="text-align:right;">
              <div class="item-content-option">
                <span>
                  <%=link_to "取消收藏", my_collection_path(collection), method: "delete" %>
                </span>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  <%}%>
<% else %>
  暂无收藏
<% end %>
