<div class="">
<h4 id='current_menu_name' class=""><%= t(:change_profile) %></h4>
<%= render partial: 'avator' %>

<div id="changeDataTitle" class="changeDataTitle">
        <h4 id="changeDataTitleText" class="changeDataTitleText">修改个人资料</h4>
</div>

<%= simple_form_for(@user, url: change_profile_my_account_path(@user), :html => {:method => :patch, id:"change_profile_form"}) do |f| %>

  <div class="form-inputs">
    <%= f.input :nickname%>
    <%= f.input :cellphone%>
    <%= f.input :validate_code, placeholder: t(:input_only_change_phone), input_html: {style: "float:left;"}, wrapper_html:{style:"float:left;width:55%;"} %>
    <%= button_tag t(:get_verify_code), type: :button, id:"obtainVerifyCode", style:"height:34px;float:right;margin:22px 0 20px 0;" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(:change), style:"width:100%"%>
  </div>
<% end %>

<div id="changeDataTitle" class="changeDataTitle">
    <h4 id="changeDataTitleText" class="changeDataTitleText">信用明细</h4>
</div>



</div>
