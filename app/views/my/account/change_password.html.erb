<div class="authform">
<h4><%= t(:change_password) %></h4>

<%= simple_form_for(@user, url: change_password_my_account_path(@user), :html => {:method => :patch, id:"change_password_form"}) do |f| %>

  <div class="form-inputs">
    <%= f.input :current_password, label: false, placeholder: t(:current_password)%>
    <%= f.input :password, label: false, placeholder: t(:new_password)%>
    <%= f.input :password_confirmation, label: false, placeholder: t(:password_confirmation)%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(:change), style:"width:100%"%>
  </div>
<% end %>

</div>
