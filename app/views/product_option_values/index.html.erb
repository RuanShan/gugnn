<p id="notice"><%= notice %></p>

<h1>Product Option Values</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Product</th>
      <th>Category option</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_option_values.each do |product_option_value| %>
      <tr>
        <td><%= product_option_value.category_id %></td>
        <td><%= product_option_value.product_id %></td>
        <td><%= product_option_value.category_option_id %></td>
        <td><%= product_option_value.title %></td>
        <td><%= link_to 'Show', product_option_value %></td>
        <td><%= link_to 'Edit', edit_product_option_value_path(product_option_value) %></td>
        <td><%= link_to 'Destroy', product_option_value, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

