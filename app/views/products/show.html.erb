<div class="container">
<ol class="breadcrumb">
  <%== build_breadscrambs(@category) %>
  <li class="active"> <%=@product.title %></li>
</ol>
</div>

<div class="container product" >
  <div class="row product-base">
    <div class="col-md-6">
      <div class="product-images-wrapper">
        <!-- Swiper -->
        <div class="swiper-container gallery-large">
            <div class="swiper-wrapper">
              <% if @product.images.present? %>
                <% @product.images.each_with_index{| image, i| %>
                  <%= tag :div, { class: 'swiper-slide', style: "background-image:url(#{ image.photo.url})"},  true %> </div>
                <% } %>
              <% else %>
                <%= tag :div, { class: 'swiper-slide', style: "background-image:url(#{image_url('slides/default.png')})"},  true %> </div>
              <% end %>
            </div>

        </div>
        <div class="swiper-container gallery-thumb">
          <% if @product.images.present? %>
            <div class="swiper-wrapper">
                <% @product.images.each_with_index{| image, i| %>
                  <%= tag :div, { class: 'swiper-slide', style: "background-image:url(#{ image.photo.url})"},  true %> </div>
                <% } %>
            </div>
            <!-- Add Arrows -->
            <div class="arrow-right">
              <a class="swiper-button-next swiper-button-white" > </a>
            </div>
            <div class="arrow-left">
              <a class="swiper-button-prev swiper-button-white" > </a>
            </div>
          <% end %>
        </div>
      </div>
      <% image =  @product.master_image || Image.new %>
      <% #= image_tag image.photo.url(:large) %>

    </div>
    <div class="col-md-6 product-info">
        <h2> <%= @product.title %> </h2>

        <div class="pay-price ">
            <div class="pull-left" id="top-left-w">
                <span style="margin-right: 25px;">租　金：</span>
                <span class="high-light-red">
                    <span class="first">￥</span>
                    <span class="two"><%= @product.price %></span>
                    <span class="three">/<%= Product.translate_enum_name("tenancy", @product.tenancy) %></span>
                </span>
            </div>
            <div class="condition pull-right">
                <span class="pay-re condition-1">押金：￥<span id="yaj"> <%= @product.deposit %></span></span>
                <span class="pay-re condition-last">1<%= Product.translate_enum_name("min_tenancy", @product.min_tenancy) %>起租</span>
            </div>
        </div>
        <ul class="house-basic-item3">
                <li>
                    <span class="c_999">小区：</span>
                    <span class="c_000 mr_10">
                                                    <a href="/xiaoqu/lvxianghuayuan" target="_blank" class="c_000" onclick="clickLog('from=fcpc_detail_esf_dl_xiaoqu')">绿香花园                        </a>- <a class="c_000" href="/lvbo/ershoufang/" target="_blank" onclick="clickLog('from=fcpc_detail_esf_dl_xiaoqu_shangquan')">绿波</a>
                                            </span>
                </li>
                                    <li>
                        <span class="c_999">位置：</span>
                    <span class="c_000 mr_10">
                                                    <a class="c_000" href="/shahekou/ershoufang/" target="_blank" onclick="clickLog('from=fcpc_detail_esf_dl_weizhi_quyu')">沙河口</a>
                                                －
                        <a class="c_000" href="/xiaoqu/lvxianghuayuan" target="_blank" onclick="clickLog('from=fcpc_detail_esf_dl_weizhi_xiaoqu')">绿清街22-68号</a>
                    </span>

                        <span class="f12 c_999 mr_10">距离地铁师范大学1537米</span>
                        <span><a href="javascript:;" class="mapNavIcon td-u" jumpto="mapWrap" onclick="clickLog('from=fcpc_detail_esf_dl_weizhi_map')"><i class="icon"></i>地图</a></span>
                    </li>
        </ul>
        <div>
          <div class="house-basic-item4">
                          <p class="nav"><a href="#" target="_blank" onclick=""> <%= user_avatar(@product.owner) %></a><span class="f14 c_333 jjrsay"><%=@product.owner.nickname%> 说</span></p>
                          <p class="c_999 lh22 jjr-desc">此房是南北通厅，南北卧室中间卫生间，多层6楼采光好视野佳，婚房改善莫错过！</p>
          </div>
        </div>
        <div class="house-chat-entry clearfix" id="houseChatEntry">
          <div class="house-chat-phone">
              <p class="phone-logo"><i class="glyphicon glyphicon-earphone"></i></p>
              <p class="phone-num">15724526952</p>
          </div>
        </div>
    </div>

  </div>

  <div class="row">
    <div class="col-md-3">
      <div class="side-left-wrap">
        <%= render partial: 'owner_profile' %>
      </div>
    </div>
    <div class="col-md-9 product-details">
      <div class="navbar navbar-default" >
        <ul class="nav nav-tabs" role="tablist">
              <li >
                <a href="#generalProperty"> 概况</a>
              </li>
              <li class="">
                <a href="#generalDesc">设备描述</a>
              </li>
              <li  class="">
                <a href="#generalExpense">租赁描述</a>
              </li>
              <li  class="">
                <a href="#generalImage">图片说明</a>
              </li>

              <li   class="">
                <a href="#mapWrap">位置</a>
              </li>
        </ul>
      </div>
      <div>
        <p id="generalProperty">
          <h3>概况</h3>
          <%== @product.desc %>
        </p>
        <p id="generalDesc">
          <h3>设备描述</h3>
          <%== @product.desc %>
        </p>
        <p id="xiaoWrap">
          <h3>租赁描述</h3>
        </p>
        <p id="generalImage">
          <h3>图片说明</h3>
        </p>
        <p id="mapWrap">
          <h3>位置</h3>
        </p>
      </div>

    </div>
  </div>

</div>
