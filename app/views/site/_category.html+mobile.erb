<%= content_tag 'div', id: dom_id(category), role: 'tabpanel', class: (category_counter==0 ? "tab-pane active #{category.name}" : "tab-pane #{category.name}" ) do %>

     <div class="">
        <div class="category">
            <div class="head">
              <div> <span class="title"> <%= category.title %> </span>
                <a class="toggleSubCategoriesBtn"><%= @category.try( :title) || category.children.first.title %> <span class="caret"></span> </a>
                <a class="pull-right">更多 </a>
              </div>
              <div class="subcategries hidden ">
                <% category.children.each{|cate| %>
                  <%= link_to cate.title, cate, remote: true %>
                <% } %>
              </div>
            </div>

        </div>
        <div class="gg-cate-prods swiper-container">
          <ul class="swiper-wrapper">
            <% category.highlight_subproducts.each_with_index{ |product, i| %>
              <li class="swiper-slide" >
                <%= link_to product_path(product), class:'product' do%>
                  <div class="product-image-wrapper">
                  <% if product.master_image.present? %>
                  <%= image_tag product.cover_url, class:"gg-prod-img product-image" %>
                  <% else %>
                  <%= image_tag 'default.png', class:"gg-prod-img product-image" %>
                  <% end %>
                  </div>
                  <div class="gg-cate-prod-info">
                    <div class='gg-cate-prod-price' > <%== display_price product%> </div>
                    <div class='gg-cate-prod-title' > <%= product.title%> </div>
                  </div>
                <% end %>
              </li>

            <% } %>
          </ul>
        </div>
    </div>
 <% end %>
