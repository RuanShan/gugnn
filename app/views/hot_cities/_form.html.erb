<%= simple_form_for(@hot_city) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :pingyi %>
    <%= f.input :acronyms %>
    <%= f.input :province %>
    <%= f.input :status %>
    <%= f.input :integer %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
