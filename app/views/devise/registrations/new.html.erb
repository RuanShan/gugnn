<div class="authform">
<h4><%= t(:sign_up) %></h4>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="form-inputs">
    <%= f.input :nickname, label: false, placeholder: t(:nickname), autofocus: true %>
    <%= f.input :password, label: false, placeholder: t(:password)%>
    <%= f.input :validate_code, label: false, placeholder: t(:input_verify_code), input_html: {style: "float:left;"}, wrapper_html:{style:"float:left;width:55%;"} %>
    <%= button_tag t(:get_verify_code), type: :button, id:"obtainVerifyCode", style:"height:34px;float:right;margin-bottom:20px;" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(".sign_up"), style:"width:100%"%>
  </div>
<% end %>

</div>
