<div class="authform">
<h4><%= t(:reset_password) %></h4>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), :html => {:method => :put, id:"reset_password_form"}) do |f| %>

  <div class="form-inputs">
    <%= f.input :cellphone, label: false, placeholder: t(:cellphone), autofocus: true %>
    <%= f.input :password, label: false, placeholder: t(:new_password)%>
    <%= f.input :password_confirmation, label: false, placeholder: t(:password_confirmation)%>
    <%= f.input :validate_code, label: false, placeholder: t(:input_verify_code), input_html: {style: "float:left;"}, wrapper_html:{style:"float:left;width:55%;"} %>
    <%= button_tag t(:get_verify_code), type: :button, id:"obtainVerifyCode", style:"height:34px;float:right;margin-bottom:20px;" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(:reset), style:"width:100%"%>
  </div>
<% end %>

</div>
