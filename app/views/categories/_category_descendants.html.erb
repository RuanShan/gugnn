<div class="gg-slider">
  <%= image_tag 'slides/cslide.jpg' %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-9">
      新品首发
      <div class="latest clearfix">

          <div class="subcategries ">
            <% @category.children.each{|category| %>
              <div class="category">
                <div class="category-title"> <span class="title"> <%= category.title %> </span>
                  <%= link_to '更多', category, class: 'pull-right' %>
                </div>
                <ul class="products clearfix">
                <% category.products.limit(4).each_with_index{ |product, i| %>
                  <li class="width-1-4 product" >
                    <%= link_to product_path(product), class:'' do%>
                      <div class="image-wrapper">
                      <% if product.master_image.present? %>
                      <%= image_tag product.cover_url, class:"product-image" %>
                      <% else %>
                      <%= image_tag 'default.png', class:"product-image" %>
                      <% end %>
                      </div>
                      <div class="product-info">
                        <div class='rental' > <%== display_price product%> </div>
                        <div class='desc' > <%= product.title%> </div>
                      </div>
                    <% end %>
                  </li>
                <% } %>
                </ul>
              </div>
            <% } %>
          </div>
        <ul>

        </ul>
      </div>
    </div>
    <div class="col-md-3">
      热门品牌
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
    <dl>
      <% @category.category_options.each{|co| %>
          <dt> <%= co.title %> </dt>
          <dd><%= link_to_with_filters OptionValue.any_option_value(co) %>
          <% co.option_values.each{| ov| %>
            <%= link_to_with_filters ov %>
          <% } %>
          </dd>
      <% } %>
    </dl>
  </div>
    <div class="col-md-12">
    <div class=" selected-filters">
      <span class="title">条件 </span>
      <%== show_product_filters %>
    </div>
  </div>
  </div>
</div>
<div class="products">
  <h3> 产品 </h3>
  <ul class="list-group">
    <% @products.each{|product| %>
      <li class="list-group-item product clearfix">
        <%= product_image product %>

        <div class="product-info pull-left">
          <h3> <%= link_to product.title, product_path( product) %> </h3>
          <p>
            押金: <%= product.deposit %>元   最低租期: <%= product.display_min_tenancy%> <br/>
          </p>
          <p>来自: <span><%= product.owner.nickname %> </span> </p>
        </div>
        <div class="pprice pull-right">
          <span> <%== display_price(product) %> </span>
        </div>
      </li>
      <% } %>
  </ul>
  <%= paginate @products %>
</div>
